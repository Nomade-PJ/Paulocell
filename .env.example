# Configuração de banco de dados PostgreSQL (Vercel/Neon)
DATABASE_URL=postgres://user:password@endpoint/dbname?sslmode=require

# Configuração de banco de dados MongoDB (alternativa)
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/paulocell?retryWrites=true&w=majority

# Configurações de autenticação
JWT_SECRET=sua_chave_secreta_jwt_aqui
JWT_EXPIRES_IN=8h
REFRESH_TOKEN_SECRET=sua_chave_secreta_refresh_token_aqui
REFRESH_TOKEN_EXPIRES_IN=7d

# Configuração de banco de dados
# Opções: prisma, vercel-postgres, mongoose
DB_TYPE=prisma

# Chave para inicialização segura do banco de dados (apenas em produção)
DB_INIT_KEY=chave_aleatoria_para_inicializacao_segura

# Configurações de ambiente
NODE_ENV=production

